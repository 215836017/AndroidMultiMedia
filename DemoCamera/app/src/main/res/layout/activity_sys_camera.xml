<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".systemAPI.SysCameraActivity">

    <Button
        android:id="@+id/sys_camera_activity_btn_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="call system camera APP to take photo" />

    <Button
        android:id="@+id/sys_camera_activity_btn_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="call system camera APP to record video" />

    <TextView
        android:id="@+id/sys_camera_activity_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="test" />

    <ImageView
        android:id="@+id/sys_camera_activity_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@mipmap/ic_launcher" />
</LinearLayout>