<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/main_act_btn_sys_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnClick"
            android:text="使用系统APP录像" />

        <Button
            android:id="@+id/main_act_btn_media_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnClick"
            android:text="MediaRecord" />

        <Button
            android:id="@+id/main_act_btn_mv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnClick"
            android:text="MediaController+VideoView" />

        <Button
            android:id="@+id/main_act_btn_ms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnClick"
            android:text="MediaPlayer+SurfaceView+自定义控制器" />

        <Button
            android:id="@+id/main_act_btn_msm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnClick"
            android:text="MediaPlayer+SurfaceView+MediaController" />

        <Button
            android:id="@+id/main_act_btn_mt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnClick"
            android:text="MediaPlayer+TextureView+自定义控制器" />

    </LinearLayout>
</ScrollView>